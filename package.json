{
  "name": "webpack-simple-starter",
  "version": "1.0.0",
  "description": "Simple starter webpack",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "dev": "cross-env NODE_ENV=development webpack --mode development",
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "editorconfig": "editorconfig-checker",
    "lint": "eslint src/*js/ --fix",
    "stylelint": "stylelint \"src/scss/**/*.scss\" --fix --custom-syntax postcss-scss",
    "test": "npm run editorconfig && npm run stylelint && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Al2003x/Webpack-simple-starter.git"
  },
  "author": "Al2003x",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Al2003x/Webpack-simple-starter/issues"
  },
  "homepage": "https://github.com/Al2003x/Webpack-simple-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.0",
    "editorconfig-checker": "^4.0.2",
    "eslint": "^8.2.0",
    "eslint-config-htmlacademy": "^4.1.0",
    "html-loader": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.0",
    "imagemin-webpack": "^5.1.1",
    "lint-staged": "^11.2.6",
    "mini-css-extract-plugin": "^2.4.3",
    "node-sass": "^6.0.1",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "postcss": "^8.3.11",
    "postcss-scss": "^4.0.2",
    "sass-loader": "^12.3.0",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-scss": "^4.0.0",
    "terser-webpack-plugin": "^5.2.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "dependencies": {
    "focus-visible": "^5.2.0",
    "normalize.css": "^8.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.(css|scss)": [
      "npm run stylelint",
      "git add"
    ],
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
